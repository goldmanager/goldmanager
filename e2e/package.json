{
  "name": "goldmanager-e2e",
  "private": true,
  "description": "End-to-end tests for GoldManager using Playwright",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "pretest": "playwright install",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report ./test-results-html",
    "codegen": "playwright codegen http://localhost:8080"
  },
  "devDependencies": {
    "@playwright/test": "1.54.2"
  }
}
